{%if showNabar is not defined or showNavbar%}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark ">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse  justify-content-end" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                {% if user %}
                    {# Si l'utilisateur est connecté, affiche le bouton de déconnexion #}
                    <li class="nav-item">
                        <a class="nav-link" href="logout">Déconnexion</a>
                    </li>
                {% else %}
                    {# Si l'utilisateur n'est pas connecté, affiche le bouton de connexion #}
                    <li class="nav-item">
                        <a class="navbar-brand" href="login">Connexion</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% endif %}